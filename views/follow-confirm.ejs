<!-- views/follow-confirm.ejs -->
<!DOCTYPE html>
<html lang="<%= language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('bot_started') %> - <%= t('confirm') %></title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f0f0f0; padding: 20px; }
        .container { max-width: 800px; margin: 0 auto; }
        form { display: flex; flex-direction: column; }
        label { margin-bottom: 10px; }
        button { padding: 10px; background-color: #007bff; color: white; border: none; cursor: pointer; margin-right: 10px; }
        .buttons { display: flex; }
        a { padding: 10px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; }
    </style>
</head>
<body>
    <%- include('header') %>
    <div class="container">
        <p><%= output %></p>
        <p><%= t('follow_trades_prompt') %></p>
        <div class="buttons">
            <a href="/" onclick="window.open('/logs', '_blank', 'width=800,height=600'); return true;"><%= t('yes') %></a>
            <a href="/"><%= t('no') %></a>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>